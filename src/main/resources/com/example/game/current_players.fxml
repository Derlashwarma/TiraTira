<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="main_container" prefHeight="800.0" prefWidth="500.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.CurrentPlayers">
    <children>
        <Label alignment="CENTER" layoutX="26" layoutY="20" prefHeight="50" prefWidth="450" styleClass="current_players" text="CURRENT PLAYERS" />

        <TableView fx:id="playersTable" layoutX="26" layoutY="80" prefWidth="450">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" />
                <TableColumn text="Username" fx:id="usernameColumn" />
                <!-- Add more columns as needed -->
                <TableColumn prefWidth="75">
                    <graphic>
                        <Button text="Edit" onAction="#editPlayer" />
                    </graphic>
                </TableColumn>
                <TableColumn prefWidth="75">
                    <graphic>
                        <Button text="Delete" onAction="#deletePlayer" />
                    </graphic>
                </TableColumn>
            </columns>
        </TableView>

        <Button layoutX="150" layoutY="700" onAction="#backButton" styleClass="button-color" text="EXIT" />
    </children>
</AnchorPane>
