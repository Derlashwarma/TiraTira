<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="main_container" prefHeight="800.0" prefWidth="500.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.Instructions">
    <children>
            <Label alignment="CENTER" layoutX="26" layoutY="330" prefHeight="50" prefWidth="450" styleClass="how-to-play" text="INTRODUCTION" />
            <Label alignment="CENTER" layoutX="26" layoutY="390" prefHeight="350" prefWidth="450" styleClass="text-area" stylesheets="@menu_styles.css" wrapText="true">
                Welcome to Space Horizon - the ultimate space shooter game! Use your mouse to evade enemy bullets to survive and obliterate foes to become the ultimate space hero. But beware: one hit and you lose 10 health points.  Blast foes to bits, but don't collide with them - it's instant game over! As you conquer levels, brace for tougher challenges. Are you ready to conquer the cosmos and carve your name in spacefaring legend? Get ready to soar, shoot, and dominate the cosmos!
            </Label>
            <Button layoutX="20" layoutY="40" onAction="#backButton" styleClass="imageButton">
                <graphic>
                    <!-- Load the image -->
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <image>
                            <Image url="@../images/back_arrow.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
    </children>
</AnchorPane>
